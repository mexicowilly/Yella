namespace yella.fb;

table read_burst
{
    count: uint;
    // messages_per_second is optional
    messages_per_second: double;
}

table read_pause
{
    milliseconds: uint;
    disconnect: bool;
}

union read_step_impl
{
    read_burst,
    read_pause
}

table read_step
{
    step: read_step_impl;
}

table spool_test
{
    steps: [read_step];
}

root_type spool_test;