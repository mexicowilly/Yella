namespace yella.fb;

enum compression : byte
{
    NONE,
    LZ4
}

enum group_disposition : byte
{
    MORE,
    END
}

table sequence
{
    major: uint;
    minor: uint;
}

table group
{
    // If you call this 'identifier', it causes compilation problems
    id: string;
    disposition: group_disposition;
}

table header
{
    seconds_since_epoch: ulong;
    sender: string;
    recipient: string;
    type: string;
    cmp: compression;
    seq: sequence;
    grp: group;
}

root_type header;